# ============================================================================== #
#                                 CONFIGURATION                                  #
# ============================================================================== #

NAME = btc

# üì¶ Compiler & Flags
CXX := c++
CXXFLAGS := -Wall -Wextra -Werror -Wshadow -g3 -std=c++98

# üõ† Utilitaires
MAKE := make
RM := rm -rf

# üìÅ Sources & Objets
SRCS := main.cpp \
		BitcoinExchange.cpp
OBJS := $(SRCS:.cpp=.o)


# ============================================================================== #
#                               RULES - BUILD FLOW                               #
# ============================================================================== #

# üéØ R√®gle principale
all: $(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $(NAME) $(OBJS)

%.o: %.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@


# ============================================================================== #
#                                   CLEAN RULES                                  #
# ============================================================================== #

clean:
	$(RM) $(OBJS)

fclean: clean
	$(RM) $(NAME)

re: fclean all

# ============================================================================== #
#                                    TEST RULES                                  #
# ============================================================================== #

test: $(NAME)
	./$(NAME)

test_leak: $(NAME)
	valgrind --leak-check=full --show-leak-kinds=all --track-fds=yes --track-origins=yes --log-fd=1 --trace-children=yes ./$(NAME)

# ============================================================================== #
#                                  PHONY & DEPS                                  #
# ============================================================================== #

# üìå Cibles qui ne sont pas des fichiers
.PHONY: all clean fclean re
